{
    "name": "react-ts-boilerplate",
    "private": true,
    "type": "module",
    "version": "0.0.0",
    "scripts": {
        "dev": "nodemon -w src server.ts --ext ts --exec ts-node-esm server.ts",
        "build": "tsc && vite build",
        "preview": "vite preview"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.18.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "wouter": "^2.8.0-alpha.2"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.14",
        "@types/node": "^18.7.23",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.1.0",
        "autoprefixer": "^10.4.12",
        "nodemon": "^2.0.20",
        "postcss": "^8.4.16",
        "tailwindcss": "^3.1.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.6.4",
        "vite": "^3.1.0",
        "vite-tsconfig-paths": "^3.5.0"
    }
}
