{
    "name": "react-ts-boilerplate",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "nodemon -w src server.ts --ext ts --exec ts-node-esm server.ts",
        "build:client": "tsc && vite build --outDir dist/client --ssrManifest",
        "build:server": "tsc && vite build --outDir dist/server --ssr src/entry-server.tsx",
        "build:serverfile": "tsc server.ts --outDir dist --module esnext --esModuleInterop true --moduleResolution node",
        "build": "rm -rf dist/* && yarn build:serverfile && yarn build:client && yarn build:server",
        "serve": "NODE_ENV=production node dist/server"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.18.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "server-static": "^2.0.5",
        "wouter": "^2.8.0-alpha.2"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.14",
        "@types/node": "^18.7.23",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.1.0",
        "autoprefixer": "^10.4.12",
        "nodemon": "^2.0.20",
        "postcss": "^8.4.16",
        "tailwindcss": "^3.1.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.6.4",
        "vite": "^3.1.0",
        "vite-tsconfig-paths": "^3.5.0"
    }
}
